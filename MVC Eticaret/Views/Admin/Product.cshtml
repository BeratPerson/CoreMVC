@model IEnumerable<MVC_Eticaret.Models.Urunler>


@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<p>
    @Html.ActionLink("Yeni Ürün Oluştur", "ProductCreate", new {} , new { @class = "btn btn-success btn-sm" }) |
</p>
<div style="overflow-x:auto;">
    <table id="Urunler" class="table table-striped table-bordered table-sm" cellspacing="0"
           width="100%">
        <thead>
            <tr>
                <th>
                    Ürün Adı
                </th>
                <th>
                    Katagori
                </th>
                <th>
                    Fiyat
                </th>
                <th>
                    Açıklama
                </th>

                <th>
                    Firma
                </th>

                <th>
                    Durum
                </th>
                <th>
                    Marka
                </th>
                <th>
                    Stok Durumu
                </th>
                <th>
                    Oluşturulma Tarihi
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Urun_Adi)
                    </td>
                    @foreach (var katagori in ViewBag.Katagori)
                        if (item.KatagoriId == katagori.katagoriId)
                        {
                            <td>
                                @katagori.Katagori
                            </td>
                        }
                    <td>
                        @Html.DisplayFor(modelItem => item.Urun_Fiyat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Urun_Detay)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Urun_Talep_Firma)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Urun_Durum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Urun_Marka)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Urun_StokDurum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.urun_OlusturmaTarihi)
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "ProductEdit", new { id = item.Urun_Id }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Detay", "ProductDetails", new { id = item.Urun_Id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Sil", "ProductDelete", new { id = item.Urun_Id }, new { @class = "btn btn-danger btn-sm" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
